---
const { image, alt, title, year, location, description, link, index = 0 } =
    Astro.props;

const delay = `${0.12 * index}s`;
---

<div
        class="tile project-tile"
        style={`--delay: ${delay};`}
        data-project-title={title}
        data-project-year={year}
        data-project-location={location}
        data-project-description={description}
        data-project-image={image}
        data-link={link}
>
    <img src={image} alt={alt ?? title} loading="lazy" />
    <div class="overlay">
        <div class="overlay-inner">
            <h2>{title}</h2>
            {(year || location) && (
                    <span class="overlay-kicker">
                        {[year, location].filter(Boolean).join(" Â· ")}
                    </span>
            )}
        </div>
    </div>
</div>
