const { title, slogan, index = 4 } = Astro.props;
const delay = `${0.12 * index}s`;
---

<div class="logo-tile tile" style={`--delay: ${delay};`}>
    <div class="inner">

        <button class="mode-toggle" type="button" aria-label="Toggle color mode">
            <span class="mode-icon" aria-hidden="true">â˜€</span>
        </button>

        <h1>{title}</h1>

        <div class="divider"></div>

        <p class="slogan">{slogan}</p>

        <div class="meta">
            <div>
                <span>architectural engineering</span>
                <div>
                    <span>2022</span>
                </div>
            </div>
        </div>
